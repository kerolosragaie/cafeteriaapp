<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:overScrollMode="never"
    android:scrollbars="none">


    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/iv_udcat_catimg"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_category"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_udcat_upcatimg"
                android:layout_width="44dp"
                android:layout_height="30dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="96dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_camera"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_udcat_catimgurl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/et_background"
                android:drawableStart="@drawable/ic_image"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorPrimaryVariant"
                android:fontFamily="@font/runda_regular"
                android:hint="@string/image_url"
                android:inputType="text"
                android:maxLines="1"
                android:paddingHorizontal="20dp"
                android:textColor="@color/colorPrimaryVariant"
                android:textColorHint="@color/colorPrimaryVariant"
                android:textCursorDrawable="@null"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_udcat_catname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/et_background"
                android:drawableStart="@drawable/ic_meals"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorPrimaryVariant"
                android:fontFamily="@font/runda_regular"
                android:hint="@string/meal_name"
                android:inputType="text"
                android:maxLines="1"
                android:paddingHorizontal="20dp"
                android:textColor="@color/colorPrimaryVariant"
                android:textColorHint="@color/colorPrimaryVariant"
                android:textCursorDrawable="@null"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:paddingBottom="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_udcat_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/runda_regular"
                android:text="@string/update"
                android:background="@drawable/btn_bb_corners_only"
                android:drawableStart="@drawable/ic_update"
                android:drawablePadding="8dp"
                android:drawableTint="@color/colorPrimaryVariant"
                android:textColor="@color/colorPrimaryVariant"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_udcat_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_bb_corners_only"
                android:fontFamily="@font/runda_regular"
                android:text="@string/delete"
                android:drawableStart="@drawable/ic_delete"
                android:drawablePadding="8dp"
                android:drawableTint="@color/colorPrimaryVariant"
                android:textColor="@color/colorPrimaryVariant"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>



</ScrollView>