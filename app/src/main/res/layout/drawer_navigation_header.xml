<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:id="@+id/drawer_navigation_header">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_drawer_userpp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_drawer_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kerollos Ragaie"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toEndOf="@id/iv_drawer_userpp"
        app:layout_constraintTop_toTopOf="@id/iv_drawer_userpp"/>

    <TextView
        android:id="@+id/tv_drawer_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kero@gmail.com"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_drawer_username"
        app:layout_constraintStart_toEndOf="@id/iv_drawer_userpp"/>

</androidx.constraintlayout.widget.ConstraintLayout>